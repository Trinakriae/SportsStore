@model SportsStore.WebUI.ViewModels.CategoriesListViewModel

@{ 
    Layout = null;
}

@Html.ActionLink("Home", "List", "Product")

@foreach (var link in Model.Categories)
{
    @Html.RouteLink(link, new { controller= "Product", action = "List", category = link, page = 1 }, new { @class = link == Model.SelectedCategory ? "selected" : null})
}